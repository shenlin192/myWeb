extends layout

block extendedHead
    link(rel="stylesheet", href="https://fonts.googleapis.com/icon?family=Material+Icons")
    link(rel="stylesheet", href="https://cdnjs.cloudflare.com/ajax/libs/izitoast/1.1.5/css/iziToast.min.css")
    title= htmlWebpackPlugin.options.title

block content
    div.overlay
    div.auth
        div.auth-title
            span Sign up an account

        form.auth-fields
            -
                var inputsInfo = [
                {
                    placeholder: "Username",
                    name:"userName",
                    type:"text",
                    icon: "person_outline",
                    validImage: "https://s3-us-west-2.amazonaws.com/s.cdpn.io/217233/tick.png"
                },
                {
                    placeholder: "Email",
                    name:"email",
                    type:"email",
                    icon: "email",
                    validImage: "https://s3-us-west-2.amazonaws.com/s.cdpn.io/217233/tick.png"
                },
                {
                    placeholder: "Password",
                    name:"password",
                    type:"password",
                    icon: "lock_open",
                    validImage: "https://s3-us-west-2.amazonaws.com/s.cdpn.io/217233/tick.png"
                },
                {
                    placeholder: "Confirm Password",
                    name:"confirmPassword",
                    type:"password",
                    icon: "lock_outline",
                    validImage: "https://s3-us-west-2.amazonaws.com/s.cdpn.io/217233/tick.png"
                }
                ];

            mixin input-generator(inputInfo)
                div.auth-field
                    div.icon
                        i.material-icons.md-18 #{inputInfo.icon}
                    input(placeholder= inputInfo.placeholder type=inputInfo.type name=inputInfo.name)
                    div.validation
                        //img(src=inputInfo.validImage)
                        i.material-icons done
                    div.messages

            for inputInfo in inputsInfo
                +input-generator(inputInfo)

            div.auth-field.auth-field-submit
                input(type='submit' value='Sign up')
                div.forget
                    a(href='/account/login') Have an account already?


        div.success
            h2 Thanks for creating an account with shenlinweb!
            p You’re almost finished.
            p We’ve sent an account activation email to you at &nbsp;
                span
            p Head over to your inbox and click on the "Activate My Account" button to validate your email address.

            button#resend Resend Activation E-Mail

            p I have already clicked the button,&nbsp;
                a(href='/account/login') take me to my account

    div.processing
        img(src='https://s3-us-west-2.amazonaws.com/s.cdpn.io/217233/puff.svg')
        p Processing
